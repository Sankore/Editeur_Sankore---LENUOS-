<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with type="com.paraschool.editor.client.view.ThumbnailListItem.Resources" field="res"></ui:with>

	<g:FlowPanel styleName="{res.css.thumbnail}">
		<g:HTMLPanel styleName="{res.css.closeItem}"> 
			<g:Button ui:field="closeButton" styleName="{res.css.closeButton}"></g:Button>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{res.css.mask}">
			<g:HTMLPanel></g:HTMLPanel>
			<g:Image ui:field="img" styleName="{res.css.icon}"></g:Image>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="{res.css.title}">
			<p ui:field="name"></p>
			<p ui:field="description"></p>
		</g:HTMLPanel>
	</g:FlowPanel>

</ui:UiBinder> 