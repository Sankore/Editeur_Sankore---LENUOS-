<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		@external gwt-TreeItem;
		
		.root{}
		.wrapper{float:left;width:100%;}
		.content{margin-left:230px;padding:10px;}
		.left{float:left;width:210px;margin-left:-100%;padding:10px;overflow-x: hidden;}
		
		.gwt-TreeItem {font-size: 18px;}
		.gwt-TreeItem button {margin:0;padding:0;border:none;outline:none;background:none;
			font-size:18px;cursor:pointer;text-decoration:underline;}
	</ui:style>
	<g:HTMLPanel styleName="{style.root}">
		<g:HTMLPanel styleName="{style.wrapper}">
			<g:FlowPanel ui:field="content" styleName="{style.content}"></g:FlowPanel>
		</g:HTMLPanel>
		<g:Tree ui:field="tree" styleName="{style.left}"></g:Tree>
	</g:HTMLPanel>
</ui:UiBinder> 